@media (max-width:600px) {
  .iyi > .iyi-btn {
    display: inline-block;
    position: absolute;
    right: 0px;
    top: 0px;
  }
  .iyi > .iyi-btn > label {
    display: inline-block;
    width: 50px;
    height: 50px;
    padding: 13px;
  }
  .iyi > .iyi-btn > label:hover,.iyi  #iyi-check:checked ~ .iyi-btn > label {
    background-color:#ffff;
  }
  .iyi > .iyi-btn > label > span {
    display: block;
    width: 25px;
    height: 10px;
    border-top: 2px solid #1D4ED8;

  }
  .iyi > .iyi-links {
    position: absolute;
    display: block;
    width: 100%;
    background-color: #333;
    height: 0px;
    transition: all 0.3s ease-in;
    overflow-y: hidden;
    top: 50px;
    left: 0px;
  }
  .iyi > .iyi-links > a {
    display: block;
    width: 100%;
  }
  .iyi > #iyi-check:not(:checked) ~ .iyi-links {
    height: 0px;

  }
  .iyi > #iyi-check:checked ~ .iyi-links {
    height: calc(100vh - 50px);
    overflow-y: auto;
  }
